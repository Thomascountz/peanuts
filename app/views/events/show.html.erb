<h1><%= @event.title %></h1>
<%= link_to "add tickets", coming_soon_path, class: "btn btn-lg btn-primary" %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <% if @event.event_times.empty? %>
      <h2>You currently have no show times.</h2>
      <p>Let's change that. To get started, <a href=<%= coming_soon_path %>>set up a show time or two.</a></p>
    <% else %>
      <% if !@event.event_times.upcoming.empty? %>
        <h2><%= @event.title %>'s upcoming show times.</h2>
        <%= render 'event_times', event_times: @event.event_times.upcoming %>
      <% end %>
      <% if !@event.event_times.past.empty? %>
        <h2><%= @event.title %>'s past show times.</h2>
        <%= render 'event_times', event_times: @event.event_times.past %>
      <% end %>
    <% end %>
  </div>
</div>
