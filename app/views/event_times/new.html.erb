<h1 class="center">New Date and Time for <%= @event.title %></h1>
<div class="row form-group">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@event, @event_time]) do |f| %>

    <% if @event_time.errors.any? %>
      <div id="error_explaination">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@event_time.errors.count, "error") %>
        </div>
        <ul>
          <% @event_time.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


      <div class="form-group">
        <%= f.label :start_time %><br>
        <%= f.datetime_select :start_time, :ampm => true, :minute_step => 15 %>
      </div>

      <div class="form-group">
        <%= f.label :end_time %><br>
        <%= f.datetime_select :end_time, :ampm => true, :minute_step => 15 %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
