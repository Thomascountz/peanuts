<div class="row form-group">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>

      <% if @event.errors.any? %>
        <div id="error_explaination">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@event.errors.count, "error") %>
          </div>
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title %><br>
        <em>must be under 50 characters</em><br>
        <%= f.text_field :title, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %><br>
        <em>must be between 50 and 450 characters</em><br>
        <%= f.text_area :description, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :location %><br>
        <em>must be under 250 characters</em><br>
        <%= f.text_area :location, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
